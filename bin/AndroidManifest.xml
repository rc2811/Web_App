<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.web_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bow_tie"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.web_app.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.web_app.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible"
                        android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.HomeScreenActivity"
            android:label="@string/title_activity_home_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.SettingsActivity"
            android:label="@string/title_activity_settings"
                        android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.Register"
            android:label="@string/title_activity_register"
                        android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.RegisterActivity"
            android:label="@string/title_activity_register"
                        android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.MyFamilyActivity"
            android:label="@string/title_activity_my_family"
                        android:screenOrientation="portrait"
             >
        </activity>
        <activity
            android:name="com.example.web_app.FamilyMemberActivity"
            android:label="@string/title_activity_family_member"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.QuizStartActivity"
            android:label="@string/title_activity_quiz_start"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.GoogleLoginActivity"
            android:label="@string/title_activity_google_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.SlideshowActivity"
            android:label="@string/title_activity_slideshow" >
        </activity>
        <activity
            android:name="com.example.web_app.QuizResultsActivity"
            android:label="@string/title_activity_quiz_results"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.ParseJSON"
            android:label="@string/title_activity_parse_json" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.FacebookLoginActivity"
            android:label="@string/title_activity_facebook_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.MainFragment"
            android:label="@string/title_activity_main_fragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.PickerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.web_app.FullScreenImageActivity"
            android:label="@string/title_activity_full_screen_image" >
        </activity>
        <activity
            android:name="com.example.web_app.TestSuiteActivity"
            android:label="@string/title_test_suite_activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.MessagingActivity"
            android:label="@string/title_activity_messaging"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.web_app.SendMessageActivity"
            android:label="@string/title_activity_send_message"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
